{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/__fixtures__/**.ts", "**/__tests__/**.ts", "**/__mocks__/**.ts"]
}
